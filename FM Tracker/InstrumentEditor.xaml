<Window x:Class="InstrumentEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FM_Tracker"
        mc:Ignorable="d"
        Title="Instrument editor" Height="417" Width="628" WindowStyle="ToolWindow" Background="#FF303030" Foreground="White" ResizeMode="NoResize" Loaded="Window_Loaded" PreviewKeyDown="Window_PreviewKeyDown" PreviewKeyUp="Window_PreviewKeyUp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="67"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="InstrumentNameBox" Margin="53,0,0,0" Text="" VerticalAlignment="Top" BorderBrush="#FF404040" SelectionBrush="#FF004A84" Foreground="White" Background="#FF202020" Height="22" MaxLines="1" AcceptsReturn="True"/>
        <ComboBox x:Name="InstrumentBox" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="53" BorderBrush="#FF404040" Foreground="Black" Background="#FF202020" Height="22"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Modulator" VerticalAlignment="Top" Foreground="White" HorizontalAlignment="Center"/>
            <Label Grid.Column="1" Content="Carrier" VerticalAlignment="Top" Foreground="White" HorizontalAlignment="Center"/>


            <TextBlock HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Attack" VerticalAlignment="Top"/>
            <Slider x:Name="MASlider" HorizontalAlignment="Left" Margin="12,41,0,0" VerticalAlignment="Top" Width="30" Orientation="Vertical" Height="190" LargeChange="0.05" SmallChange="0.005" Maximum="5" TickPlacement="BottomRight" TickFrequency="0.1" ValueChanged="MASlider_ValueChanged"/>
            <TextBlock x:Name="MALabel" HorizontalAlignment="Left" Margin="6,236,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextAlignment="Center"/>
            <TextBlock HorizontalAlignment="Left" Margin="54,20,0,0" TextWrapping="Wrap" Text="Decay" VerticalAlignment="Top"/>
            <Slider x:Name="MDSlider" HorizontalAlignment="Left" Margin="55,41,0,0" VerticalAlignment="Top" Width="30" Orientation="Vertical" Height="190" LargeChange="0.05" SmallChange="0.005" Maximum="5" TickPlacement="BottomRight" TickFrequency="0.1" ValueChanged="MDSlider_ValueChanged"/>
            <TextBlock x:Name="MDLabel" HorizontalAlignment="Left" Margin="49,236,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextAlignment="Center"/>
            <TextBlock HorizontalAlignment="Left" Margin="93,20,0,0" TextWrapping="Wrap" Text="Sustain" VerticalAlignment="Top"/>
            <Slider x:Name="MSSlider" HorizontalAlignment="Left" Margin="97,41,0,0" VerticalAlignment="Top" Width="30" Orientation="Vertical" Height="190" LargeChange="0.05" SmallChange="0.005" Maximum="1" TickPlacement="BottomRight" TickFrequency="0.1" ValueChanged="MSSlider_ValueChanged"/>
            <TextBlock x:Name="MSLabel" HorizontalAlignment="Left" Margin="91,236,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextAlignment="Center"/>
            <TextBlock HorizontalAlignment="Left" Margin="134,20,0,0" TextWrapping="Wrap" Text="Release" VerticalAlignment="Top"/>
            <Slider x:Name="MRSlider" HorizontalAlignment="Left" Margin="139,41,0,0" VerticalAlignment="Top" Width="30" Orientation="Vertical" Height="190" LargeChange="0.05" SmallChange="0.005" Maximum="5" TickPlacement="BottomRight" TickFrequency="0.1" ValueChanged="MRSlider_ValueChanged"/>
            <TextBlock x:Name="MRLabel" HorizontalAlignment="Left" Margin="133,236,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextAlignment="Center"/>
            <Label Content="Multiplier" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="28" Margin="10,259,0,0"/>
            <Slider x:Name="MMultiplierSlider" HorizontalAlignment="Left" Margin="76,259,0,0" VerticalAlignment="Top" Width="120" Maximum="16" SmallChange="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Height="37" ValueChanged="MMultiplierSlider_ValueChanged"/>
            <Label x:Name="MMultiplierLabel" Content="{Binding Value, ElementName=MMultiplierSlider}" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="28" Margin="201,259,0,0"/>
            <Label Content="Detune" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="28" Margin="10,285,0,0"/>
            <Slider x:Name="MDetuneSlider" HorizontalAlignment="Left" Margin="76,285,0,0" VerticalAlignment="Top" Width="120" Maximum="8" SmallChange="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Height="37" Minimum="-8" ValueChanged="MDetuneSlider_ValueChanged"/>
            <Label x:Name="MDetuneLabel" Content="{Binding Value, ElementName=MDetuneSlider}" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="28" Margin="201,285,0,0"/>
            <TextBlock HorizontalAlignment="Left" Margin="274,20,0,0" TextWrapping="Wrap" Text="TL" VerticalAlignment="Top"/>
            <Slider x:Name="MTLSlider" HorizontalAlignment="Left" Margin="265,40,0,0" VerticalAlignment="Top" Width="30" Orientation="Vertical" Height="232" LargeChange="0.5" SmallChange="0.05" Maximum="16" TickPlacement="Both" ValueChanged="MTLSlider_ValueChanged"/>
            <TextBlock x:Name="MTLLabel" HorizontalAlignment="Left" Margin="259,277,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextAlignment="Center"/>

            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Attack" VerticalAlignment="Top"/>
            <Slider Grid.Column="1" x:Name="CASlider" HorizontalAlignment="Left" Margin="12,41,0,0" VerticalAlignment="Top" Width="30" Orientation="Vertical" Height="190" LargeChange="0.05" SmallChange="0.005" Maximum="5" TickPlacement="BottomRight" TickFrequency="0.1" ValueChanged="CASlider_ValueChanged"/>
            <TextBlock Grid.Column="1" x:Name="CALabel" HorizontalAlignment="Left" Margin="6,236,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextAlignment="Center"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="54,20,0,0" TextWrapping="Wrap" Text="Decay" VerticalAlignment="Top"/>
            <Slider Grid.Column="1" x:Name="CDSlider" HorizontalAlignment="Left" Margin="55,41,0,0" VerticalAlignment="Top" Width="30" Orientation="Vertical" Height="190" LargeChange="0.05" SmallChange="0.005" Maximum="5" TickPlacement="BottomRight" TickFrequency="0.1" ValueChanged="CDSlider_ValueChanged"/>
            <TextBlock Grid.Column="1" x:Name="CDLabel" HorizontalAlignment="Left" Margin="49,236,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextAlignment="Center"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="93,20,0,0" TextWrapping="Wrap" Text="Sustain" VerticalAlignment="Top"/>
            <Slider Grid.Column="1" x:Name="CSSlider" HorizontalAlignment="Left" Margin="97,41,0,0" VerticalAlignment="Top" Width="30" Orientation="Vertical" Height="190" LargeChange="0.05" SmallChange="0.005" Maximum="1" TickPlacement="BottomRight" TickFrequency="0.1" ValueChanged="CSSlider_ValueChanged"/>
            <TextBlock Grid.Column="1" x:Name="CSLabel" HorizontalAlignment="Left" Margin="91,236,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextAlignment="Center"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="134,20,0,0" TextWrapping="Wrap" Text="Release" VerticalAlignment="Top"/>
            <Slider Grid.Column="1" x:Name="CRSlider" HorizontalAlignment="Left" Margin="139,41,0,0" VerticalAlignment="Top" Width="30" Orientation="Vertical" Height="190" LargeChange="0.05" SmallChange="0.005" Maximum="5" TickPlacement="BottomRight" TickFrequency="0.1" ValueChanged="CRSlider_ValueChanged"/>
            <TextBlock Grid.Column="1" x:Name="CRLabel" HorizontalAlignment="Left" Margin="133,236,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextAlignment="Center"/>
            <Label Grid.Column="1" Content="Multiplier" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="28" Margin="10,259,0,0"/>
            <Slider Grid.Column="1" x:Name="CMultiplierSlider" HorizontalAlignment="Left" Margin="76,259,0,0" VerticalAlignment="Top" Width="120" Maximum="16" SmallChange="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Height="37" ValueChanged="CMultiplierSlider_ValueChanged"/>
            <Label Grid.Column="1" x:Name="CMultiplierLabel" Content="{Binding Value, ElementName=CMultiplierSlider}" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="28" Margin="201,259,0,0"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="260,20,0,0" TextWrapping="Wrap" Text="Volume" VerticalAlignment="Top"/>
            <Slider Grid.Column="1" x:Name="CTLSlider" HorizontalAlignment="Left" Margin="265,40,0,0" VerticalAlignment="Top" Width="30" Orientation="Vertical" Height="232" LargeChange="0.1" SmallChange="0.05" Maximum="1.5" TickPlacement="Both" ValueChanged="CTLSlider_ValueChanged" TickFrequency="0.1"/>
            <TextBlock Grid.Column="1" x:Name="CTLLabel" HorizontalAlignment="Left" Margin="259,277,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="42" TextAlignment="Center"/>


        </Grid>
        <Label Content="Feedback" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="28" Width="60" Margin="0,29,0,0"/>
        <Slider x:Name="FeedbackSlider" HorizontalAlignment="Left" Margin="65,28,0,0" VerticalAlignment="Top" Width="120" Maximum="16" SmallChange="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Height="37" ValueChanged="FeedbackSlider_ValueChanged"/>
        <Label x:Name="FeedbackLabel" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="28" Margin="190,29,0,0"/>
        <Label Content="Pitch slide" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="28" Margin="221,29,0,0"/>
        <Slider x:Name="PitchMacroSlider" HorizontalAlignment="Left" Margin="286,28,0,0" VerticalAlignment="Top" Width="120" Maximum="0.2" SmallChange="0.005" TickPlacement="BottomRight" Height="37" Minimum="-0.2" TickFrequency="0.05" ValueChanged="PitchMacroSlider_ValueChanged" LargeChange="0.05"/>
        <Label x:Name="PitchMacroLabel" Content="{Binding Value, ElementName=PitchMacroSlider}" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Height="28" Margin="411,29,0,0"/>

    </Grid>
</Window>
